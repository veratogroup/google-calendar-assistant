# Google OAuth (create in Google Cloud; refresh token from OAuth Playground)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
CALENDAR_ID=primary

# App / Security
API_KEY=                                # admin header key for /events/*, /freebusy, /availability
ACTION_TOKEN=                            # for one-click action links (/action/*)
SUMMARY_TOKEN=                           # for read-only summary link (/summary/next-week?token=)

# Defaults
DEFAULT_TZ=America/Chicago
WORK_DAYS=1,2,3,4,5                      # 0=Sun..6=Sat
WORK_START_HOUR=9
WORK_END_HOUR=17
SLOT_INTERVAL_MIN=30
BUFFER_MIN=10
MIN_NOTICE_MIN=120

# Public base URL of your Render service or custom domain (used by Vonage webhooks)
PUBLIC_BASE_URL=

# Vonage (optional; needed only for outbound calls)
VONAGE_APPLICATION_ID=
VONAGE_PRIVATE_KEY_B64=                  # base64 of your Vonage private key (.key file)
VONAGE_NUMBER=                           # your Vonage virtual number, e.g., 15551234567

# Render runtime port
PORT=10000
